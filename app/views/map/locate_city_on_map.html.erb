<html>
  <head>
    <script src="http://maps.google.com/maps?file=api&v=2&key=ABQIAAAATJL7OHV_fwFFKPDFWt53ChT2yXp_ZAY8_ufC3CFXhHIE1NvwkxRp-K-fE-a41fLoOHyfZY85x2fgCA" 
		type="text/javascript">
    </script>
    <title>Cities Map</title>
    <%= javascript_include_tag :defaults %>
  </head>
  <body>
    <div id="formSection">
      <form id="cityForm">
        City: <input type="text" name="city" id="city">
		<input type="button" name="lookupCoordForACity" value="Lookup Coordinates for a City" 
															id="lookupCoordForACityButton"/>
		<input type="button" name="AddCity" value="Add City" id="addCityButton"/><br/>
		Region/State: <input type="text" name="state" id="state"><br/>
		Country: <input type="text" name="country" id="country"><br/>
		Population: <input type="text" name="population" id="population"><br/>
		Longitude: <input type="text" name="longitude" id="longitude"><br/>
		Latitude: <input type="text" name="latitude" id="latitude"><br/>
      </form>
    </div>
	<table>
	  <tr>
		<td>
		    <div id="map" style="width: 800px; height: 500px">
		    </div>	
		</td>		
		<td>		
	    <div id="tableSection">
	      <table border="1">
	        <tr id="cityHeader">
	          <td>
	            Delete
	          </td>
	          <td>
	            City
	          </td>
	          <td>
	            State
	          </td>
	          <td>
	            Longitude
	          </td>
	          <td>
	            Latitude
	          </td>
	        </tr>
	        <!-- Note: if tbody is not used, Safari adds new rows above the header -->
	        <tbody id="cityTable">
	        </tbody>
	      </table>
	    </div>
		</td>		
	  </tr>		
	</table>
    <div id="debug">
    </div>
  </body>
</html>
